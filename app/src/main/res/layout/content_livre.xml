<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hasimananjara.e_boky.MainActivity"
    tools:showIn="@layout/activity_livre">
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Livre"
            android:textAlignment="center"
            android:textColor="#46d246"
            android:textSize="18sp"
            android:textStyle="italic" />
        <android.support.v7.widget.CardView
            android:layoutMode="opticalBounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textAlignment="viewStart"
                        android:text="Numero : "/>
                    <TextView
                        android:id="@+id/numerolivre"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:text="E01"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="0.5dp"
                    android:background="#dad8d8"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_gravity="center_vertical"
                        android:text="Designation: "
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/design"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:singleLine="true"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="0.5dp"
                    android:background="#dad8d8"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_gravity="center_vertical"
                        android:text="Auteur : "
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/Auteurlivre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:singleLine="true"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="0.5dp"
                    android:background="#dad8d8"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textAlignment="viewStart"
                        android:text="Edition : "/>
                    <TextView
                        android:id="@+id/editionLivre"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:text="12/03/2012"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="0.5dp"
                    android:background="#dad8d8"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp">


            <Button
                android:id="@+id/buttonModiflivre"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/buttonSupplect"
                android:background="@drawable/button"
                android:text="Modifier"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonSuppllivre"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button"
                android:text="Supprimer"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
